<%- include('header') %>


    <div class="content">
        <div class="animated fadeIn">


            <div class="row">




                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header">Example Form</div>
                        <div class="card-body card-block">
                            <form action="/extracategory/insertExtracategory" id="basicform"  method="post">
    
                                <div class="form-group">
                                    <label for="inputUserName">Enter Category</label>
                                    <select class="form-control" name="categoryId" id="categoryId" onchange="getSubcategoryData()">
                                            <option value="">--select Category--</option>
                                            <% for(var cd of catdata){%>
                                            <option value="<%= cd.id %>"><%= cd.categoryname %></option>
                                            <% } %>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="inputUserName">Select Subcategory</label>
                                    <select class="form-control" name="subcategoryId" id="subcategoryId">
                                                <option value="">--select subcategory--</option>
                                                <option value=""></option>
                                            
                                    </select>
                                </div>
    
    
                                <div class="form-group">
                                    <label for="inputUserName">Enter ExtraCategory</label>
                                    <input id="inputUserName" type="text" name="extracategoryname"  data-parsley-trigger="change" required="" placeholder="Enter category Name" autocomplete="off" class="form-control">
                                </div>
    
                                
                                
                                <div class="row">
                                   
                                    <div class="col-sm-6 pl-0">
                                        <p class="text-right">
                                            <input  type="submit" class="btn btn-space btn-primary" value="Add Admin" name="Submit">
                                            <button class="btn btn-space btn-secondary">Cancel</button>
                                        </p>
                                    </div>
                                    
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>


        </div><!-- .animated -->
    </div><!-- .content -->

    <div class="clearfix"></div>



    <%- include('footer') %>